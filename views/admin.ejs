<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>EscapeCalifornia Admin Panel</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 40px; background: #f5f5f5; }
    h1 { margin-bottom: 0.25rem; }
    .subtitle { color: #666; margin-bottom: 1.5rem; }

    .toolbar {
      margin-bottom: 1.5rem;
    }
    .toolbar a {
      margin-right: 10px;
      text-decoration: none;
      padding: 6px 10px;
      border-radius: 4px;
      background: #ffffff;
      box-shadow: 0 0 4px rgba(0,0,0,0.1);
      font-size: 0.9rem;
    }
    .toolbar a:hover {
      box-shadow: 0 0 8px rgba(0,0,0,0.15);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: #fff;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 0 8px rgba(0,0,0,0.1);
    }
    th, td {
      padding: 8px 10px;
      border-bottom: 1px solid #eee;
      font-size: 0.9rem;
      vertical-align: top;
    }
    th {
      background: #fafafa;
      text-align: left;
      font-weight: bold;
    }
    tr:last-child td {
      border-bottom: none;
    }
    .empty {
      padding: 20px;
      text-align: center;
      color: #777;
    }
  </style>
</head>
<body>
  <h1>Admin Panel</h1>
  <div class="subtitle">Relocation Leads</div>

  <div class="toolbar">
    <a href="/switchboard">? Back to Switchboard</a>
    <a href="/admin/logout">Log Out</a>
  </div>

  <% if (!relocation_leads || relocation_leads.length === 0) { %>
    <div class="empty">
      No leads found yet.
    </div>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Submitted</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>From</th>
          <th>To</th>
          <th>Timeline</th>
        </tr>
      </thead>
      <tbody>
        <% relocation_leads.forEach(function(lead) { %>
          <tr>
            <td><%= lead.id || '' %></td>
            <td>
              <% if (lead.created_at) { %>
                <%= lead.created_at.toISOString ? lead.created_at.toISOString().slice(0, 19).replace('T', ' ') : lead.created_at %>
              <% } %>
            </td>
            <td><%= lead.name || '' %></td>
            <td><%= lead.email || '' %></td>
            <td><%= lead.phone || '' %></td>
            <td><%= lead.city_from || '' %></td>
            <td><%= lead.city_to  || '' %></td>
            <td><%= lead.timeline  || '' %></td>

		<td>
		<form method="POST" action="/admin/relocation-leads/<%= lead.id %>">
			<input type="hidden" name="_csrf" value="<%= csrfToken %>">
      
  		<label>Status</label>
  		<select name="status">
    			<option value="new" <%= lead.status === 'new' ? 'selected' : '' %>>New</option>
    			<option value="contacted" <%= lead.status === 'contacted' ? 'selected' : '' %>>Contacted</option>
    			<option value="qualified" <%= lead.status === 'qualified' ? 'selected' : '' %>>Qualified</option>
    			<option value="archived" <%= lead.status === 'archived' ? 'selected' : '' %>>Archived</option>
  		</select>

  		<label>Notes</label>
  		<textarea name="admin_notes" rows="3"><%= lead.admin_notes || '' %></textarea>

  		<button type="submit">Save</button>
		</form>
		</td>


          </tr>
        <% }); %>
      </tbody>
    </table>


  <% } %>


</body>
</html>