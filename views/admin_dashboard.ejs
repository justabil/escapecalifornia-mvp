<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>EscapeCalifornia Admin Dashboard</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 24px; background:#f6f7fb; }
    header { display:flex; justify-content:space-between; align-items:center; gap:12px; margin-bottom:16px; }
    h1 { margin:0; font-size: 1.4rem; }
    .pill { display:inline-block; padding:6px 10px; border-radius:999px; background:#e9eefc; color:#1b3a8a; font-size:12px; }
    .btn {
      display:inline-block; padding:8px 12px; border-radius:6px; border:1px solid #c7cbe0;
      background:#fff; cursor:pointer; text-decoration:none; color:#1a1a1a;
    }
    .btn-primary { background:#1976d2; border-color:#1976d2; color:#fff; }
    .layout { display:grid; grid-template-columns: 1fr; gap:14px; }
    .card { background:#fff; border-radius:10px; box-shadow:0 1px 6px rgba(0,0,0,0.08); padding:14px; }
    .muted { color:#666; font-size: 0.95rem; }
    table { width:100%; border-collapse: collapse; margin-top:10px; }
    th, td { text-align:left; padding:10px 8px; border-bottom:1px solid #eee; vertical-align: top; }
    th { font-size: 12px; letter-spacing: .02em; text-transform: uppercase; color:#555; }
    .nowrap { white-space: nowrap; }
    .empty { padding:12px; border:1px dashed #cfd3ea; border-radius:8px; background:#fbfbff; }
    form.inline { display:inline; }
    .top-actions { display:flex; gap:10px; align-items:center; }
    code { background:#f1f2f6; padding:2px 5px; border-radius:4px; }

    .filters { display:flex; flex-wrap:wrap; gap:10px; align-items:end; margin-top:10px; }
    .filters label { font-size: 0.9rem; color:#333; }
    .filters input, .filters select {
      padding:6px 8px; border:1px solid #c7cbe0; border-radius:6px; margin-left:6px;
    }

    .stats-grid { display:grid; grid-template-columns: repeat(4, minmax(140px, 1fr)); gap:10px; margin-top:10px; }
    .stat { padding:10px; border:1px solid #eef0fb; border-radius:10px; background:#fbfcff; }
    .stat .label { font-size:12px; color:#666; text-transform: uppercase; letter-spacing:.02em; }
    .stat .value { font-size:20px; font-weight:700; margin-top:4px; }

    .two-col { display:grid; grid-template-columns: 1fr; gap:14px; }
    @media (min-width: 900px) {
      .two-col { grid-template-columns: 1.6fr 1fr; }
    }

    .notes-box { display:flex; gap:8px; align-items:center; }
    .notes-box input[type="text"] { width: 320px; max-width: 100%; padding:6px 8px; border:1px solid #c7cbe0; border-radius:6px; }
    .btn-small { padding:6px 10px; font-size: 0.9rem; border-radius:6px; }
    .state-list { margin: 8px 0 0 0; padding-left: 18px; }
  </style>
</head>

<body>

  <header>
    <div>
      <h1>Admin Dashboard</h1>
      <div class="muted">EscapeCalifornia MVP</div>
    </div>

    <div class="top-actions">
      <span class="pill">Signed in</span>

      <!-- Logout -->
      <form class="inline" method="POST" action="/admin/logout">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button class="btn" type="submit">Log out</button>
      </form>

      <a class="btn btn-primary" href="/">View Site</a>
    </div>
  </header>

  <div class="layout">

    <!-- A1: CSV FILTERS -->
    <div class="card">
      <h2 style="margin:0 0 6px 0; font-size:1.1rem;">Download Leads CSV</h2>
      <div class="muted">Filter the export (optional). Leaves blank = no filter.</div>

      <form method="GET" action="/admin/leads.csv" class="filters">
        <label>
          Days
          <input type="number" name="days" min="0" value="30" style="width:90px;">
        </label>

        <label>
          State
          <input type="text" name="state" placeholder="TX" maxlength="2" style="width:70px; text-transform:uppercase;">
        </label>

        <label>
          Type
          <select name="type">
            <option value="">Any</option>
            <option value="residential">Residential</option>
            <option value="business">Business</option>
          </select>
        </label>

        <button type="submit" class="btn btn-primary">Download CSV</button>
      </form>

      <div class="muted" style="margin-top:8px;">
        Tip: You can also hit the URL directly, e.g. <code>/admin/leads.csv?days=30</code>
      </div>
    </div>

    <div class="two-col">

      <!-- A4: STATS + TOP STATES -->
      <div class="card">
        <h2 style="margin:0 0 6px 0; font-size:1.1rem;">Lead Metrics</h2>
        <div class="muted">Quick snapshot based on your database.</div>

        <% if (stats) { %>
          <div class="stats-grid">
            <div class="stat">
              <div class="label">Today</div>
              <div class="value"><%= stats.today %></div>
            </div>
            <div class="stat">
              <div class="label">Last 7 days</div>
              <div class="value"><%= stats.last7 %></div>
            </div>
            <div class="stat">
              <div class="label">Last 30 days</div>
              <div class="value"><%= stats.last30 %></div>
            </div>
            <div class="stat">
              <div class="label">Total</div>
              <div class="value"><%= stats.total %></div>
            </div>
          </div>
        <% } else { %>
          <div class="empty" style="margin-top:10px;">
            Stats unavailable (missing <code>created_at</code> column).
          </div>
        <% } %>
      </div>

      <div class="card">
        <h2 style="margin:0 0 6px 0; font-size:1.1rem;">Top Destination States</h2>
        <div class="muted">Top 10 by lead count.</div>

        <% if (topStates && topStates.length) { %>
          <ul class="state-list">
            <% topStates.forEach(s => { %>
              <li><strong><%= s.state %></strong> — <%= s.cnt %></li>
            <% }) %>
          </ul>
        <% } else { %>
          <div class="empty" style="margin-top:10px;">
            No destination-state data found (or missing <code>destination_state</code> column).
          </div>
        <% } %>
      </div>

    </div>

    <!-- LEADS TABLE + A2 ADMIN NOTES -->
    <div class="card">
      <h2 style="margin:0 0 6px 0; font-size:1.1rem;">Recent Leads</h2>
      <div class="muted">Showing newest first (up to 200).</div>

      <% if (!leads || leads.length === 0) { %>
        <div class="empty" style="margin-top:10px;">
          No leads found yet.
          <div class="muted" style="margin-top:6px;">
            When someone submits the lead form, you’ll see them here.
          </div>
        </div>
      <% } else { %>
        <table>
          <thead>
            <tr>
              <th class="nowrap">Created</th>
              <th>Name</th>
              <th>Email</th>
              <th>Type</th>
              <th>State</th>
              <th>Admin Notes</th>
            </tr>
          </thead>
          <tbody>
            <% leads.forEach(l => { %>
              <tr>
                <td class="nowrap">
                  <%= l.created_at ? new Date(l.created_at).toLocaleString() : '' %>
                </td>
                <td><%= l.name || '' %></td>
                <td><%= l.email || '' %></td>
                <td><%= l.client_type || l.type || '' %></td>
                <td><%= l.destination_state || l.state || '' %></td>
                <td>
                  <form method="POST" action="/admin/leads/<%= l.id %>/notes" class="notes-box">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input
                      type="text"
                      name="admin_notes"
                      value="<%= l.admin_notes || '' %>"
                      placeholder="Add internal notes…"
                    />
                    <button class="btn btn-small" type="submit">Save</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>

        <div class="muted" style="margin-top:10px;">
          Note: “Type” and “State” columns display <code>client_type</code> and <code>destination_state</code> if present; otherwise <code>type</code> / <code>state</code>.
        </div>
      <% } %>
    </div>

  </div>

</body>
</html>
